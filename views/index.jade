extends layout

block content
  div.row
    div#bb_search_view.span12(style="text-align:center")
      img(src="/images/Octocat.png",style="width:240px")
      div
        h2 ghstr
        p  スターの履歴を見たいユーザー名をいれて検索してね。
      div.input-append
        input(type="text",placeholder="username...")
        button.btn.btn-primary.btn-smail Search
    div#bb_scroll_view.span12(style="text-align:center")
      ul#bb_list_view.thumbnails


  script#star-template(type='text/template')
    div.thumbnail
      <% if (org.avatar_url !== undefined) { %>
      | <img src="<%= org.avatar_url %>" data-src="holder.js/300x200">
      <% } %>
      h3 <%= repo.name %>
      p
      | <a href="<%= repo.url %>"><%= repo.url %></a>
      div
        span.label created_at
        spna <%= created_at %>

append javascripts
  script#star-template(type='text/template', src="/javascripts/templates/star-template.js")
  script(src="/javascripts/app.js")
